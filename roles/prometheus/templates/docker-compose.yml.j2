  #   ports:
  #     - 127.0.0.1:9093:9093
  #   restart: always

  grafana:
    image: grafana/grafana:9.4.3
    volumes:
      - ./config/grafana/datasources:/etc/grafana/datasources
      - ./config/grafana/dashboards:/etc/grafana/dashboards
      - grafana_data:/var/lib/grafana
    ports:
      - 127.0.0.1:3000:3000
    restart: always

volumes:
  prometheus_data:
  grafana_data:
