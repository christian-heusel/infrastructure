---
version: "3"

services:
  nextcloud_exporter:
    image: ghcr.io/sberk42/fritzbox_exporter/fritzbox_exporter:latest
    ports:
      - {{ fritzbox_exporter.listen_port }}:9042
    environment:
      USERNAME: "{{ fritzbox_exporter.username }}"
      PASSWORD: "{{ fritzbox_exporter.password }}"
      GATEWAY_URL: "{{ fritzbox_exporter.gateway_url }}"
      LISTEN_ADDRESS: "0.0.0.0:9042"
    restart: always
